<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.dagimg.noty</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Noty</name>
  <summary>A keyboard-driven note-taking app</summary>
  <description>
    <p>Noty is a simple, lightweight, and modern note-taking app that allows you to create, edit,
      and manage notes quickly and easily with only your keyboard.</p>
  </description>

  <developer id="tld.vendor">
    <name>Dagim G. Astatkie</name>
  </developer>

  <url type="homepage">https://github.com/dagimg-dot/noty</url>
  <url type="vcs-browser">https://github.com/dagimg-dot/noty</url>
  <url type="bugtracker">https://github.com/dagimg-dot/noty/issues</url>


  <translation type="gettext">noty</translation>
  <!-- All graphical applications having a desktop file must have this tag in the MetaInfo.
     If this is present, appstreamcli compose will pull icons, keywords and categories from the desktop
  file. -->
  <launchable type="desktop-id">com.dagimg.noty.desktop</launchable>
  <!-- Use the OARS website (https://hughsie.github.io/oars/generate.html) to generate these and
  make sure to use oars-1.1 -->
  <content_rating type="oars-1.1" />

  <!-- Applications should set a brand color in both light and dark variants like so -->
  <branding>
    <color type="primary" scheme_preference="light">#ff00ff</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <image>https://example.org/example1.png</image>
      <caption>A caption</caption>
    </screenshot>
    <screenshot>
      <image>https://example.org/example2.png</image>
      <caption>A caption</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.1.0" date="2025-04-07">
      <url type="details">https://github.com/dagimg-dot/noty/releases/tag/v0.1.0</url>
      <description translate="no">
        <p>Release description</p>
        <ul>
          <li>Initial release</li>
        </ul>
      </description>
    </release>
  </releases>

</component>